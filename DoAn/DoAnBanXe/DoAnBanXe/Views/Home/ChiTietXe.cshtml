    button.btn {
        border-radius: 10px;
        outline: 0 !important;
        background: #ff6a00;
        border: #ff0000 solid 2px;
    }

        button.btn:hover {
            background: #ff0000;
            border: #ffd800 solid 2px;
        }

    .card {
        border-radius: 10px;
        border: #ff0000 solid 3px;
        margin: 5px;
        background: #ffffff;
    }

    p {
        margin: 2px 6px 10px;
    }
</style>
<div class="container">
    <div class="haudai">
        <div class="box-haudai">
            <div class="TenXe ">
                <hr />
                @Model.TenXe
            </div>
            <div class="left-haidai">
                <div class="zoom">
                    <div class="thumbnail">
                        <img src="~/image/@Model.AnhBia" alt="@Model.TenXe" />
                        @*<div class="View-detail">
                                <a href="#" title="View Detail"><i class="bi bi-zoom-in"></i>ZOOM</a>
                            </div>*@
                    </div>
                </div>

                <div id="my-div"></div>
            </div>
            <div class="right-haidai container">
                <div class="title-haudai">
                    <font color="RED">THÔNG TIN CHI TIẾT</font>
                </div>
                <ul>
                    <li><i class="bi bi-star-fill"></i><font color="#daa520" text-center> @Model.LoaiXe </font></li>
                    <li>
                        TÊN XE:<font color="red"> @Model.TenXe </font>
                    </li>

                    <li>
                        GIÁ CÔNG BỐ:<font color="red"> @Model.GiaXe.ToString("#,##") VNĐ</font> @*<i class="bi bi-currency-dollar">*@</i>
                    </li>
                    <li>
                        <img src="~/image/itemCamKet.png" alt="" /> Cam Kết Chất Lương
                    </li>
                    <li>
                        <img src="~/image/itemCheDoBaoHanh.png" alt="" /> Chế Độ Bảo Hành
                    </li>
                    <li>
                        <img src="~/image/tiemDichVuSuaChua.png" alt="" /> Dịch Vụ & Sửa Chửa
                    </li>
                    <li>
                        <img src="~/image/iemDangKyDichVu.png" alt="" /> <a href="@Url.Action("LaiThu","Use")">Đăng Ký Lái Thử</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <button aria-expanded="false" class="btn"
            data-toggle="collapse" data-target="#ThongTin">
        Xem Thêm...
    </button>
    <hr />
    <div class="collapse mt-4" id="ThongTin">
        <div class="card">
            <p class="cart-text"> @Html.Raw(Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))</p>
        </div>
    </div>
</div>
