
@{
    ViewBag.Title = "Chi Tiết Xe";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">
    .thumbnail {
        background-color: #000000;
    }

    .TenXe {
        margin: 0px;
        font-size: 28px;
        font-weight: bold;
    }

    .left-haidai {
        width: 55%;
        float: left;
        position: relative;
    }

    .title-haudai {
        color: #181f35;
        font-family: 'Cabin-bold';
        padding: 5px 0px;
        font-size: 30px;
    }

    .right-haidai {
        text-align: center;
    }

        .right-haidai ul {
            padding-top: 10px;
            width: 40%;
            float: right;
            text-align: left;
            list-style: none;
        }

        .right-haidai li {
            padding: 5px;
            font-family: 'cabin';
            font-size: 18px;
        }

        .right-haidai ul li {
            padding-left: 35px;
        }

    .zoom {
        position: relative;
        /*overflow: hidden;*/
        transition: all 1s ease;
        padding: 10px 10px 0;
        -webkit-transition: all 1s ease;
        -moz-transition: all 1s ease;
        -o-transition: all 1s ease;
    }

        .zoom img {
            width: 100%;
            /** Hình ảnh rộng 100% so với vùng chứa **/
            transition: all 1s;
        }

        .zoom:hover img {
            transform: scale(1.5, 1.5);
            -webkit-transform: scale(1.5, 1.5);
            -moz-transform: scale(1.5, 1.5);
            -o-transform: scale(1.5, 1.5);
            -ms-transform: scale(1.5, 1.5);
        }

