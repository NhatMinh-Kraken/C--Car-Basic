@using DoAnBanXe.Models
@model DoAnBanXe.Models.LaiThu1

@{
    ViewBag.Title = "Lái Thử";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">



    div#left {
        width: 100%;
    }

    .box-laithu {
        width: 100%;
        position: relative;
    }

        .box-laithu img {
            width: 100%;
            filter: brightness(100%);
        }

    .img {
        vertical-align: middle;
        border: 0;
        max-width: 100% !important;
    }

    .dk-laithu {
        position: absolute;
        top: 9%;
        /*left: 65%;
        width: 30%;
        height: 85%;
        display: table;*/
        left: 65%;
    }

    .box-dklt {
    }

    .title-lt b {
        font-size: 24px;
        color: #ffffff;
    }

    .title-lt p {
        font-size: 14px;
        color: #ffffff;
    }

    .form-group {
        margin-bottom: 7px;
    }

    .form-horizontal .form-group {
        margin-right: 80px;
        margin-left: 100px;
    }

    button, input, select, textarea {
        border: none;
        margin: 3px 0px;
        border-bottom: #000 solid 3px;
        background: rgba(0, 0, 30, 0.75);
        padding: 4px;
        border-radius: 20px;
        width: 90%;
        color: #ffffff;
        outline: 0 !important;
    }



    .form-group input[type="submit"] {
        width: 20%;
        border-bottom: #ffffff solid 3px;
        background: #000;
        border-color: #ffffff;
        font-weight: bold;
        color: #ffffff;
    }

        .form-group input[type="submit"]:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            color: red;
            border: red;
        }

        .form-group input[type="submit"]:active {
            background-color: /*rgb(91 89 89 / 0.51)*/ #ffffff82;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }


    .err {
        color: #f00;
        width: 100%;
    }

    i {
        padding: 0px;
    }

    li {
        text-align: left;
    }

    .validation-summary-errors {
        margin: 0px;
        padding: 0px;
    }

    .trai {
        width: 100%;
        position: absolute;
        top: 13%;
    }

        .trai ul {
            width: 24%;
            color: red;
            margin-left: 42%;
        }

    .form-horizontal .form-group {
        margin-right: unset;
        margin-left: unset;
    }

    .dangky {
        text-align: center;
        margin-right: 10%;
    }

    .title-lt {
        text-align: center;
        margin-right: 0%;
        top: 10px;
    }


    .text-danger {
        color: #f00;
    }

    .validation-summary-errors {
        width: 100%;
    }

    .form-horizontal {
        margin-left: 10%;
    }
</style>

<div id="main_content">
    <div id="right">
        <div id="left">
            <div class="box-laithu">
                <img src="~/image/mercedes-banner-5.png">


                <div class="trai">
                    @Html.ValidationSummary(false)
                </div>
                <div class="dk-laithu">
                    <div class="title-lt">
                        <b>ĐĂNG KÝ LÁI THỬ XE</b>
                        <p>
                            Cập nhật thông tin đầy đủ chúng tôi sẽ liên hệ lại sắp lịch phù hợp nhất.
                        </p>
                    </div>

                    @{
                        KhachHang kh = (KhachHang)Session["TaiKhoan"];
                    }

                    <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
                    @using (Html.BeginForm("LaiThu", "Use"))
                    {

                        @*@Html.AntiForgeryToken()*@


                        <div class="form-horizontal">

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sTenTK" type="text" name="sTenTK" value="@kh.TaiKhoan" placeholder="Tên Tài Khoản của bạn: " readonly="readonly" />

                                </div>
                            </div>

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sMaKH" type="text" name="sMaKH" value="@kh.MaKH" placeholder="Mã Khách Hàng của bạn: " readonly="readonly" />

                                </div>
                            </div>

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sHoTen" type="text" name="sHoTen" value="@kh.HoTen" placeholder="Tên của bạn: " />
                                    @Html.ValidationMessageFor(model => model.sHoTen, "(*)", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sDienThoai" type="text" name="sDienThoai" value="" placeholder="Số điện thoại của bạn: " />
                                    @Html.ValidationMessageFor(model => model.sDienThoai, "(*)", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sDiaChi" type="text" name="sDiaChi" value="" placeholder="Địa chỉ của bạn: " />
                                    @Html.ValidationMessageFor(model => model.sDiaChi, "(*)", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sEmail" type="text" name="sEmail" value="" placeholder="Email của bạn: " />
                                    @Html.ValidationMessageFor(model => model.sEmail, "(*)", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="item_lienhe">
                                    <input id="sNgayDat" type="text" name="sNgayDat" value="@DateTime.Now.ToShortDateString()" placeholder="Email của bạn: " readonly="readonly" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="item_lienhe">

                                    @if (ViewBag.ClassList != null)
                                    {
                                        @Html.DropDownListFor(m => m.TenClass, ViewBag.ClassList as SelectList, "---Select---", new { @class = "" })
                                        @Html.ValidationMessageFor(model => model.TenClass, "(*)", new { @class = "text-danger" })
                                    }
                                    @Html.DropDownListFor(m => m.TenXe, new SelectList(""), "---Select---", new { @class = "" })
                                    @Html.ValidationMessageFor(model => model.TenXe, "(*)", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="dangky lienhe">
                                    <input type="submit" value="Đăng Ký" class="click_ajax" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        $("#TenClass").change(function () {

            var TenClass = $("#TenClass").val();
            debugger
            $.ajax({

                type: "Post",
                url: "/Use/TenXeTheoLoai?MaCLass=" + TenClass,
                contentType: "html",
                success: function (response) {
                    debugger
                    $("#TenXe").empty();
                    $("#TenXe").append(response);

                }

            })

        })

    })

</script>



