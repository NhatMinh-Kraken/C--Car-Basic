
@{
    ViewBag.Title = "Đơn Đặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    .table-bordered {
        padding-bottom: 0px;
    }

    .table {
        margin-bottom: 32%;
    }
</style>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Mã Khách Hàng</th>
            <th>Tên tài Khoản</th>
            <th>Tên Khách Hàng</th>
            <th>Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Email</th>
            <th>LoaiXe</th>
            <th>TenXe</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.DonDatHangs)
        {
            <tr>
                <td>@item.MaDonHang</td>
                <td>@item.MaKH</td>
                <td>@item.TenTK</td>
                <td>@item.HoTen</td>
                <td>@item.DienThoai</td>
                <td>@item.DiaChi</td>
                <td>@item.email</td>
                <td>@item.LoaiXe</td>
                <td>@item.TenXe</td>
            </tr>
        }
    </tbody>
</table>
