@model DoAnBanXe.Models.ChiTietDonDatHangDC

@{
    ViewBag.Title = "Sửa Đơn Hàng Đồ Chơi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    h2 {
        text-align: center;
        color: red;
    }

    hr {
        border: 0px;
    }

    .duoi {
        text-align: center;
    }

    .form-horizontal .form-group {
        margin-right: 10px;
        margin-left: 30%;
    }
</style>


<h2>Sửa Đơn Hàng Phụ Kiện</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.STT)

        <div class="form-group">
            <label class="control-label col-md-2">Mã:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã sách không cho sửa*@
                <input type="text" size="70" name="sSTT" value="@Model.STT" readonly />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Mã Đơn Hàng:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã sách không cho sửa*@
                <input type="text" size="70" name="sMaDonHangDC" value="@Model.MaDonHangDC" readonly />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Mã Khách Hàng:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã sách không cho sửa*@
                <input type="text" size="70" name="sMaKH" value="@Model.MaKH" readonly />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Tên Phụ Kiện:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenDC" value="@Model.TenDC" required />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Giá Phụ Kiện:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sGiaDC" value="@Model.GiaDC" required />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Ngày Đặt:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sNgayDat" value="@DateTime.Now.ToShortDateString()" required />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Số Lượng:</label>
            <div class="col-md-10">
                <input type="number" min="1" size="70" name="sSoLuong" value="@Model.SoLuong" required />
            </div>
        </div>
        <hr />


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="duoi">
    @Html.ActionLink("Quay Lại Trang Quản Lý Đơn Hàng", "QLDHDCX", "Xe")
</div>
