@model DoAnBanXe.Models.ChiTietDonDatHangDC

@{
    ViewBag.Title = "Thêm Đơn Hàng Phụ Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    h2 {
        text-align: center;
        color: red;
    }

    .duoi {
        text-align: center;
    }

    .form-horizontal {
        margin-bottom: 11%;
        margin-left: 30%;
    }

        .form-horizontal .form-group {
            margin-right: 10px;
        }

    hr {
        border: 0px;
    }
</style>

<h2>Thêm Đơn Hàng Sản phẩm</h2>

@using (Html.BeginForm("CreateDHDC", "Search", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã Đơn Hàng</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sMaDHDC" value="@ViewBag.MaDonHangDC" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã Khách Hàng</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sMaKH" value="@ViewBag.MaKH" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên Phụ Kiện</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenDC" value="@ViewBag.TenDC" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giá Sản Phẩm</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sGiaDC" value="@ViewBag.GiaDC" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày Đặt</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDatHang" value="@DateTime.Now.ToShortDateString()" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số Lượng</label>
            <div class="col-md-10">
                <input type="number" min="1" size="70" name="sSoLuong" value="@ViewBag.SoLuong" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-cloud-upload"></span> Add New</button>
            </div>
        </div>
    </div>
}

<div class="duoi">
    @Html.ActionLink("Quay Lại Trang Quản Lý Đơn Hàng", "QLDHDCX", "Xe")
</div>
