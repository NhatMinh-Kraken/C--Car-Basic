@model Đồ_Án_Bán_Xe.Models.ChiTietPhuKien

@{
    ViewBag.Title = "Xóa Phụ Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<style type="text/css">
    hr {
        border: 0px;
        margin: 5px;
    }

    h2 {
        text-align: center;
        color: red;
    }

    h3 {
        text-align: center;
        color: red;
    }

    .form-actions {
        text-align: center;
    }

    .form-group button {
        border-radius: 60px;
        outline: 0 !important;
        font-size: 14px;
        background-color: #3399FF;
    }


    input[type="submit"]:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }

    input[type="submit"]:active {
        background-color: /*rgb(91 89 89 / 0.51)*/ #b6ff00;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

    dl {
        margin-top: 3%;
        margin-bottom: 13%;
    }
</style>


<h2>Xóa Phụ Kiện</h2>

<h3>Bạn Có Chắc Muốn Xóa Phụ Kiện Này Không?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Phụ Kiện
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhukien)
        </dd>

        <dt>
            Video Phụ Kiện
        </dt>

        <dd>
            <video src="~/image/@Model.AnhPhuKien" alt="@Model.TenPhukien" width="100px;"></video>
        </dd>

        <dt>
            Tiêu Đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa1)
        </dd>

        <dt>
            Mô Tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota2)
        </dd>

        <dt>
            Mã Phụ Kiện
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaPhuKien)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <hr />
            @Html.ActionLink("Quay Lại Trang Quản Lý Phụ Kiện", "QLPK", "Xe")
        </div>
        <hr />
    }
</div>
