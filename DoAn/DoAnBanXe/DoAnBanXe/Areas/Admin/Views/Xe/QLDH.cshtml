@using DoAnBanXe.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<DoAnBanXe.Models.DonDatHang>

@{
    ViewBag.Title = "Quản Lý Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    h2 {
        text-align: center;
        color: red;
    }

    p {
        text-align: center;
    }

    .table {
        margin-bottom: 26%;
    }
</style>

<h2>Quản Lý Khách Hàng</h2>

<p>
    @Html.ActionLink("Thêm Đơn Hàng", "CreateDH", "Search")
</p>
<table class="table">
    <tr>
        <th>
            Tên Tài Khoản
        </th>
        <th>
            Họ Và Tên
        </th>
        <th>
            Số Điện Thoại
        </th>
        <th>
            Địa Chỉ
        </th>
        <th>
            Email
        </th>
        <th>
            Ngày Đặt
        </th>
        <th>
            Loại Xe
        </th>
        <th>
            Tên Xe
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiXe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenXe)
            </td>
            <td>
                <a href="@Url.Action("EditDH","Search", new { id = item.MaDonHang})" class="btn btn-primary" role="button">Sửa</a>

                <a href="@Url.Action("DeleteDH","Search", new { id = item.MaDonHang})" class="btn btn-primary" role="button">Xóa</a>
            </td>
        </tr>
    }

</table>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("QLDH", new { page = page }))
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>
