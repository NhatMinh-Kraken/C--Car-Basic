@using DoAnBanXe.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<DoAnBanXe.Models.Class>

@{
    ViewBag.Title = "Quản Lý CLass";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    .tren {
        text-align: center;
    }

    .table {
        margin-left: 40%;
        width: 50%;
        max-width: 50%;
        margin-bottom: 5%;
    }

    hr {
        border: 0px;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr > td, .table > tbody > tr > td, .table > tfoot > tr > td {
        border-top: 0px;
    }

    button, input, select, textarea {
        border-radius: 60px;
        outline: 0 !important;
        font-size: 30px;
        background-color: #3399FF;
    }

        input[type="submit"]:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }

        input[type="submit"]:active {
            background-color: /*rgb(91 89 89 / 0.51)*/ #ffffff82;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }

    .btn-primary {
        background: -webkit-gradient(linear, left top, left bottom, from(#badff3), to(#7acbed));
        border: 1px solid #7db0cc !important;
    }
</style>

<div class="tren">
    <h2>Quản Lý Class</h2>

    <p>
        @Html.ActionLink("Thêm Class", "CreateClass", "Search")
    </p>
</div>
<table class="table">
    <tr>
        <th>
            Tên Class
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenClass)
            </td>
            <td>
                <a href="@Url.Action("DeleteClass","Search", new { id = item.MaClass})" class="btn btn-primary" role="button">Xóa</a>
            </td>
        </tr>
    }

</table>

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("QLCLass", new { page = page }))
</div>

<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>

