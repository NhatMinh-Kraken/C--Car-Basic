@model Đồ_Án_Bán_Xe.Models.ChiTietPhuKien

@{
    ViewBag.Title = "Sửa Phụ Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    h2 {
        text-align: center;
        color: red;
    }

    hr {
        border: 0px;
    }

    .duoitrang {
        text-align: center;
    }

    .form-horizontal {
        margin-top: 40px;
        margin-bottom: 0px;
        margin-left: 32%;
    }

        .form-horizontal .form-group {
            margin-right: 10px;
            margin-left: -15px;
        }

    .form-group button {
        border-radius: 60px;
        outline: 0 !important;
        font-size: 14px;
        background-color: #3399FF;
    }


    input[type="submit"]:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }

    input[type="submit"]:active {
        background-color: /*rgb(91 89 89 / 0.51)*/ #b6ff00;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }
</style>

<h2>Sửa Phụ Kiện</h2>

@using (Html.BeginForm("EditPK", "Search", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã sách không cho sửa*@
                <input type="text" size="70" name="iMa" value="@Model.Ma" readonly />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Tên Phụ Kiện:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenPK" value="@Model.TenPhukien" required />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Video Phụ Kiện:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                <video src="~/image/@Model.AnhPhuKien" width="120"></video> (video hiện tại)
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Tiêu Đề:</label>
            <div class="col-md-10">
                <textarea name="sTieuDe"><p>@Model.MoTa1.Replace("\n","</p><p>")</p></textarea>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Mô tả:</label>
            <div class="col-md-10">
                <textarea name="sMoTa"><p>@Model.Mota2.Replace("\n","</p><p>")</p></textarea>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <label class="control-label col-md-2">Mã Phụ Kiện:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaPK" value="@Model.MaPhuKien" readonly />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
        <hr />
    </div>
}

<div class="duoitrang">
    <hr />
    @Html.ActionLink("Về Trang Quản Lý Phụ Kiện", "QLPK", "Xe")
</div>