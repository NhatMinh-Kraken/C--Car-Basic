@model IEnumerable<DoAnBanXe.Models.Xe>

@{
    ViewBag.Title = "Quản Lý Xe";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    .search {
        text-align: center;
    }

    input, select, textarea {
        max-width: 500px;
    }

    button, input, select, textarea {
        border-radius: 20px;
        outline: 0 !important;
    }

    .nut {
        text-align: left;
    }

    input[type="submit"]:active {
        background-color: /*rgb(91 89 89 / 0.51)*/ #ffffff82;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

    hr {
        border: 0px;
    }
</style>

<hr />
<div class="search">
    @using (Html.BeginForm("Search", "Search", FormMethod.Get))
    {
        <p>
            <input type="text" name="strSearch" value=" @ViewBag.Search" placeholder="Nhập Sản phẩm Cần Tìm " size="1000px" />
            <input type="submit" value="Tìm Kiếm" />
        </p>
    }
</div>
@{
    if (Model != null)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaXe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LoaiXe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiaXe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenXe)
                </th>
                <th width="500px;">
                    @Html.DisplayNameFor(model => model.MoTa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayCapNhat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaClass)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaXe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiXe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiaXe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenXe)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayCapNhat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaClass)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaXe }) |
                        @Html.ActionLink("Detail", "Detail", new { id = item.MaXe }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaXe })
                    </td>
                </tr>
            }

        </table>
    }
}
