@using DoAnBanXe.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DoAnBanXe.Models.ChiTietDonDatHangDC>

@{
    ViewBag.Title = "Quản Lý Đơn Hàng Phụ Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<style type="text/css">
    h2 {
        text-align: center;
        color: red;
    }

    p {
        text-align: center;
    }

    .table {
        margin-bottom: 26%;
    }
</style>

<h2>Quản Lý Đơn Hàng Phụ Kiện</h2>

<p>
    @Html.ActionLink("Thêm Đơn Hàng", "CreateDHDC", "Search")
</p>
<table class="table">
    <tr>
        <th>
            Mã Khách Hàng
        </th>
        <th>
            Tên Phụ Kiện
        </th>
        <th>
            Giá Phụ Kiện
        </th>
        <th>
            Ngày Đặt
        </th>
        <th>
            Số Lượng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaDC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                <a href="@Url.Action("EditDHDC","Search", new { id = item.STT})" class="btn btn-primary" role="button">Sửa</a>

                <a href="@Url.Action("DeleteDHDC","Search", new { id = item.STT})" class="btn btn-primary" role="button">Xóa</a>
            </td>
        </tr>
    }

</table>
