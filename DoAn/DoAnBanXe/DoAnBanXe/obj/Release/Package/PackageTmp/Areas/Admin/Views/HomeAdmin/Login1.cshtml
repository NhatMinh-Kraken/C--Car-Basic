
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin</title>
    <link rel="SHORTCUT ICON" href="~/image/icon.ico">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="~/Areas/Script/JavaScriptThongBao.js"></script>

    <style type="text/css">
        body {
            height: 100%;
            margin: 0px;
        }

        img {
            width: 100%;
            height: 100%;
            background-size: cover;
        }

        .NutLogin {
            position: absolute;
            top: 300px;
            left: 50%;
        }

        button, input, select, textarea {
            border-radius: 60px;
            outline: 0 !important;
            font-size: 30px;
            background-color: #3399FF;
        }

            input[type="submit"]:hover {
                box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            }

            input[type="submit"]:active {
                background-color: /*rgb(91 89 89 / 0.51)*/ #ffffff82;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }

        .btnLogin {
            background: -webkit-gradient(linear, left top, left bottom, from(#badff3), to(#7acbed));
            border: 1px solid #7db0cc !important;
        }

        .alert {
            margin-bottom: 0px;
        }

        .alert-success {
            color: #3c763d;
            background-color: #dff0d8;
            border-color: #d6e9c6;
        }

        .alert {
            padding: 15px;
            
            border: 1px solid transparent;
            border-radius: 4px;
        }
    </style>

</head>
<body>
    <div>
        @if (TempData["AlertMessage"] != null)
        {
            <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                @TempData["AlertMessage"]
            </div>
        }
    </div>

    <div>
        <img src="~/image/banner admin 6.png" />
    </div>

    <div class="NutLogin">
        <a href="@Url.Action("Login","HomeAdmin")"><input type="submit" class="btnLogin" value="LOGIN" tabindex="4"></a>
    </div>
</body>
</html>
