@model DoAnBanXe.Models.Xe

@{
    ViewBag.Title = "SỬa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">

    body {
    }

    hr {
        border: 0px solid #000000;
    }

    .duoitrang hr {
        border: 1px solid #000000;
    }

    .duoitrang {
        text-align: center;
    }

    h2 {
        text-align: center;
    }

    input[type="submit"] {
        border-radius: 30px;
        outline: 0 !important;
        font-size: 10px;
        background-color: #3399FF;
    }

        input[type="submit"]:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }

        input[type="submit"]:active {
            background-color: /*rgb(91 89 89 / 0.51)*/ #ffffff82;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }

    .form-horizontal .form-group {
        margin-right: -300px;
    }

    .noidung {
        max-width: 30%;
        margin: 10px auto;
        padding: 0px;
    }

    .form-group input[type="submit"] {
        text-align: center;
    }
</style>

<h2>ĐIỀU CHỈNH THÔNG TIN XE</h2>
<hr />

<div class="noidung">
    @*Thêm thuộc tính cho form để upload ảnh*@
    @using (Html.BeginForm("Edit", "Search", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Mã Xe:</label>
                <div class="col-md-10">
                    @*Chỉ hiển thị mã sách không cho sửa*@
                    <input type="text" size="70" name="iMaXe" value="@Model.MaXe" readonly />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Loại Xe:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="sLoaiXe" value="@Model.LoaiXe" required />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Tên Xe:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="sTenXe" value="@Model.TenXe" required />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Ảnh bìa:</label>
                <div class="col-md-10">
                    <input type="file" name="fFileUpload" />
                    <img src="~/image/@Model.AnhBia" width="120"> (Ảnh hiện tại)
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Giá bán:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="mGiaXe" value="@Model.GiaXe" />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Mô tả:</label>
                <div class="col-md-10">
                    <textarea name="sMoTa"><p>@Model.MoTa.Replace("\n","</p><p>")</p></textarea>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Ngày cập nhật:</label>
                <div class="col-md-10">
                    <input type="datetime" name="dNgayCapNhat" required
                           value="@Convert.ToDateTime(Model.NgayCapNhat)" />
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label class="control-label col-md-2">Mã Loại Xe:</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaClass")
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
                </div>
            </div>
            <hr />
        </div>
    }
</div>
<div class="duoitrang">
    <hr />
    @Html.ActionLink("VỀ TRANG QUẢN LÝ XE", "Index", "Xe")
</div>
