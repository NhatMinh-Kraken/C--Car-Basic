@model Đồ_Án_Bán_Xe.Models.DonDatHang

@{
    ViewBag.Title = "Thêm ĐƠn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    h2 {
        text-align: center;
        color: red;
    }

    .duoi {
        text-align: center;
    }

    .form-horizontal {
        margin-bottom: 11%;
        margin-left: 30%;
    }

        .form-horizontal .form-group {
            margin-right: 10px;
        }

    hr {
        border: 0px;
    }
</style>

<h2>Thêm Đơn Hàng</h2>

@using (Html.BeginForm("CreateDH", "Search", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Tài Khoản</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenTK" value="@ViewBag.TenTK" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Họ và Tên</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenKH" value="@ViewBag.HoTen" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Điện Thoại</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sDienThoai" value="@ViewBag.DienThoai" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa Chỉ</label>
            <div class="col-md-10">
                <textarea name="sDiaChi">@ViewBag.DiaChi</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sEmail" value="@ViewBag.Email" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Loại Xe</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                <input type="text" size="70" name="sLoaiXe" value="@ViewBag.LoaiXe" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên Xe</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                <input type="text" size="70" name="sTenXe" value="@ViewBag.TenXe" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-cloud-upload"></span> Add New</button>
            </div>
        </div>
    </div>
}

<div class="duoi">
    @Html.ActionLink("Quay Lại Trang Quản Lý Đơn Hàng", "QLDH", "Xe")
</div>
