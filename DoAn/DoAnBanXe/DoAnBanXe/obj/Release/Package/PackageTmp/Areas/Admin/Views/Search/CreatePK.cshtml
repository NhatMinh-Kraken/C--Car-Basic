@model DoAnBanXe.Models.ChiTietPhuKien

@{
    ViewBag.Title = "Thêm Phụ Kiện";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    /*button, input, select, textarea {
        border-radius: 60px;
        outline: 0 !important;
        font-size: 30px;
        background-color: #3399FF;
    }*/
    .form-group button {
        border-radius: 60px;
        outline: 0 !important;
        font-size: 14px;
        background-color: #3399FF;
    }


    input[type="submit"]:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }

    input[type="submit"]:active {
        background-color: /*rgb(91 89 89 / 0.51)*/ #b6ff00;
        box-shadow: 0 5px #666;
        transform: translateY(4px);
    }

    h2 {
        text-align: center;
        color: red;
    }

    .form-horizontal {
        margin-left: 35%;
        margin-right: 20px;
    }

    hr {
        border: 0px;
    }

    .duoi {
        text-align: center;
    }

    .form-horizontal {
        margin-top: 40px;
        margin-bottom: 10%;
    }
</style>

<h2>Thêm Phụ Kiện</h2>

@using (Html.BeginForm("CreatePK", "Search", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Phụ Kiện</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenPK" value="@ViewBag.TenPK" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh Phụ Kiện</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tiêu Đề</label>
            <div class="col-md-10">
                <textarea name="sTieuDe">@ViewBag.TieuDe</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô Tả</label>
            <div class="col-md-10">
                <textarea name="sMoTa">@ViewBag.MoTa</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã Phụ Kiện</label>
            <div class="col-md-10">
                <input type="text" size="70" name="MaPK" value="@ViewBag.MaPK" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-cloud-upload"></span> Add New</button>
            </div>
        </div>
    </div>
}

<div class="duoi">
    @Html.ActionLink("Quay Lại Trang Quản Lý Phụ Kiện", "QLPK", "Xe")
</div>
