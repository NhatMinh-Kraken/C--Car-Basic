@model IEnumerable<DoAnBanXe.Models.Xe>

@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style type="text/css">


    div#wapper {
        width: 100%;
        background: white;
    }


    .container {
        max-width: 100%;
    }

    /* .thumbnail {
        margin: 5px;
        padding-top: 10px;
        height: 300px;
        display: block;
    }*/

    .thumbnail_zoom {
        margin: 5px;
        padding-top: 10px;
        height: 300px;
        display: block;
        padding: 10%;
        line-height: 1.42857143;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        -webkit-transition: all 1s ease;
    }

        .thumbnail_zoom:hover img {
            transform: scale(1.5, 1.5);
            -webkit-transform: scale(1.5, 1.5);
            -moz-transform: scale(1.5, 1.5);
            -o-transform: scale(1.5, 1.5);
            -ms-transform: scale(1.5, 1.5);
        }


    .caption {
        padding-right: 1px;
        padding-top: 1px;
        padding-bottom: 1px;
    }

    .left.thumbnail {
        height: 480px;
    }

        .left.thumbnail img {
            height: 320px
        }

    .right.thumbnail {
        height: 225px;
    }

    .left-haidai {
        width: 65%;
        float: left;
        position: relative;
    }

    .title-haudai {
        color: #181f35;
        font-family: 'Cabin-bold';
        padding: 10px 0px;
        font-size: 20px;
    }

    .right-haidai {
        text-align: center;
    }

        .right-haidai ul {
            padding-top: 10px;
            width: 34%;
            float: right;
            text-align: left;
            list-style: none;
        }

        .right-haidai li {
            padding: 5px;
            font-family: 'cabin';
            font-size: 18px;
        }

        .right-haidai ul li {
            padding-left: 35px;
        }

    .item-tintuc {
        font-family: utm-avo;
        color: #000;
        font-size: 16px;
        text-align: left;
        overflow: hidden;
        position: relative;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .item-right.thumbnail {
        height: 100px;
    }

    .item-right > div {
        padding-bottom: 10px;
    }

    .box-inf .item-name {
        text-align: center;
        color: #808080;
    }

    a {
        color: black;
        text-decoration: none;
    }

    hr {
        border-top: 0px;
    }

    .title-lt {
        color: #ff006e;
    }

    div#right {
        width: 100%;
    }

    div#left {
        width: 20%;
        float: left;
    }

    .googlemap {
        position: relative;
        width: 100%;
    }

    .inf_lienhe {
        position: absolute;
        z-index: 1;
        background: transparent linear-gradient(270deg, #ffffff1f 0%, #fffffff2 23%, white 100%) 0% 0% no-repeat padding-box;
        left: 0;
        top: 0;
        padding: 5.5%;
        padding-left: 15%;
        max-height: 350px;
    }

    .left_1hngay h4 {
        margin-bottom: 20px;
        color: #000;
        font-size: 20px;
        font-weight: bold;
    }

    .left_1hngay p {
        font-size: 16px;
        margin-bottom: 15px;
    }

    ul {
        color: #000;
    }

    h2 {
        letter-spacing: .05em;
        text-shadow: 4px 4px 0px #d5d5d5, 7px 7px 0px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="wapper">
    <div class="slide">
        <div id="carousel1" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#carousel1" data-slide-to="0" class="active"> </li>
                <li data-target="#carousel1" data-slide-to="1" class=""> </li>
                <li data-target="#carousel1" data-slide-to="2" class=""> </li>
                <li data-target="#carousel1" data-slide-to="3" class=""> </li>
            </ol>
            <div class="carousel-inner ">

                <div class="item active">
                    <img class="img-responsive" src="~/image/banner1.png" alt="banner1">
                </div>
                <div class="item">
                    <img class="img-responsive" src="~/image/banner2.png" alt="banner2">
                </div>
                <div class="item">
                    <img class="img-responsive" src="~/image/banner3.png" alt="banner3">
                </div>
                <div class="item">
                    <img class="img-responsive" src="~/image/banner4.png" alt="banner4">
                </div>
            </div>
            <a class="left carousel-control" href="#carousel1" data-slide="prev"><span class="icon-prev"></span></a> <a class="right carousel-control" href="#carousel1" data-slide="next"><span class="icon-next"></span></a>
        </div>
    </div>
</div>
<hr />
<div class="container">
