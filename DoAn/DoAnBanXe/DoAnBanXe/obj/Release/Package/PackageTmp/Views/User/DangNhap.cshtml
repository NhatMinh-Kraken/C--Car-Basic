@using DoAnBanXe.Models
@model DoAnBanXe.Models.KhachHang

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">

    div#wapper {
        background: radial-gradient(#030872, #027cad, #87faf7);
    }

    td {
        height: 40px;
    }

    .dn {
        height: auto;
        width: 500px;
        margin: auto;
        /* border: 1px solid aliceblue;*/
        background: radial-gradient(#030872, #027cad, #87faf7);
        border-radius: 10px;
        padding-top: 20px;
    }

    .khung {
        top: 3px;
        right: -30%;
        left: 50%;
        width: 100%;
        height: 100%;
    }

    td {
        text-align: center;
    }

    button, input, select, textarea {
        border-radius: 20px;
        outline: 0 !important;
    }

    .nut {
        text-align: left;
    }

    input[type="submit"] {
        background: #000;
        color: aliceblue;
    }

        input[type="submit"]:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            color: red;
            border: red;
        }

        input[type="submit"]:active {
            background-color: /*rgb(91 89 89 / 0.51)*/ #51A9FF;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }

    h1 {
        color: red;
    }

    td {
        color: #ff6a00;
    }

    /*.khung-trong{
       width:24rem;
       right:20%;
    }*/

</style>
<div class="Anh text-center">
    <img src="~/image/logo.png" />
</div>
<div class="dn">
    <div class="khung">
        <div class="khung-trong">
            <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
            <h1 style="text-align:center;">ĐĂNG NHẬP</h1>
            <table align="center">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(false)
                    if (Request.Cookies["TaiKhoan"] != null && Request.Cookies["MatKhau"] != null)
                    {
                        <tr>
                            <td>
                                Tên Đăng Nhập:
                            </td>
                            <td>
                                @Html.TextBox("TaiKhoan", Request.Cookies["TaiKhoan"].Value)
                                @Html.ValidationMessageFor(model => model.TaiKhoan, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Mật Khẩu:
                            </td>
                            <td>
                                @Html.Password("MatKhau", Request.Cookies["MatKhau"].Value)
                                @Html.ValidationMessageFor(model => model.MatKhau, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>Tên đăng nhập: </td>
                            <td>
                                @Html.TextBox("TaiKhoan")
                                @Html.ValidationMessageFor(model => model.TaiKhoan, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>Mật khẩu: </td>
                            <td>
                                @Html.Password("MatKhau")
                                @Html.ValidationMessageFor(model => model.MatKhau, "(*)", new { @class = "text-danger" })
                            </td>
                        </tr>

                    }
                    <tr>
                        <td></td>
                        <td>
                            @Html.CheckBox("remember")<span style="font-style:italic">Nhớ Thông Tin Đăng Nhập</span>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="nut">
                            <input type="submit" value="Đăng nhập" />
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>



