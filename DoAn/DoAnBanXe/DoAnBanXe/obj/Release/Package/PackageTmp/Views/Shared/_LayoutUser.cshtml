        </div>

        <div class="hostline-messenger">
            <a href="https://www.facebook.com/nguyen.riven.35/"><img src="~/image/messenger.svg" alt="Messenger icon" /></a>
        </div>


        @* navbar *@
        @Html.Action("NavbarPartial", "Home")
        @* kết thúc navbar *@



        <div>
            @if (TempData["AlertMessage"] != null)
            {
                <div id="AlertBox" class="alert @TempData["AlertType"] hide" role="alert">
                    @TempData["AlertMessage"]
                </div>
            }

            @RenderBody()
        </div>

        @* footer *@
        <div id="wap_footer">
            <div id="footer">
                <div class="container">
                    <div class="menu-f only-pc container">
                        <div class="menu-head-f menu-pc-f">
                            <nav>
                                <ul>
                                    <li>
                                        @Html.ActionLink("Trang Chủ", "Index", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Giới Thiệu", "GioiThieu", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Xe Mercedes", "SanPham", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Phụ Kiện", "DoChoiXe", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Tin Tức & Khuyến Mãi", "TinTucKhuyenMai", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Khách Hàng Cần Biết", "BaoDuongXeChuyenNghiep", "Home")
                                    </li>
                                    <li>
                                        @Html.ActionLink("Đăng Ký Lái Thủ", "LaiThu", "Use")
                                    </li>

                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <div class="list-item-contact">
                    <div class="list-contact">
                        <a href="https://www.facebook.com/">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://www.youtube.com/">
                            <i class="bi bi-youtube"></i>
                        </a>
                        <a href="https://www.google.com/">
                            <i class="bi bi-google"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="cpr">
                <div class="container">
                    <div class="text-center">
                        <p>Họ & Tên: Nguyễn Nhật Minh</p>
                        <p>Lớp: D19PM02</p>
                        <p>Môn: Lập Trình Web T1301-HK3.CQ.01</p>
                        <p>Số Điện Thoại: 0396764757</p>
                        <p>Email: nguyennhatminh26122001@gmail.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* kết thúc footer *@

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script>
        $(function () {
            $(window).scroll(function () {
                let marginWithTop = $(window).scrollTop();
                if (marginWithTop > 500) {
                    $('.back-to-top').addClass('show-back-to-top');
                }
                else {
                    $('.back-to-top').removeClass('show-back-to-top');
                }
            })
            $('.back-to-top').click(function () {
                $('html, body').animate({ scrollTop: 0 }, '300')
            })
        })
    </script>

</body>
</html>
